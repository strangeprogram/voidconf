[settings]
throttle-ms = 50
throttle-limit = 5

[bar/top]
wm-restack = bspwm

monitor= ${env:MONITOR:}
width = 100%
height = 17

background = #222222
foreground = #c2c2b0
red = #CC6666
yellow = #F0C674
green = #B3BB67
blue = #7FA0BC

line-size = 2

spacing = 1
padding-left = 2
padding-right = 2
module-margin-left = 0
module-margin-right = 2

font-0 = FontAwesome:size=10.5;1
font-1 = siji:size=8
font-2 = scientifica:size=9
font-3 = tewi:size=9
font-4 = unifont:fontformat=truetype:size=8:antialias=false;0
font-5 = Overpass:size=8

modules-left = bspwm
modules-center = mpd
modules-right = vpn wifi volume pulseaudio clock power

[module/xwindow]
type = internal/xwindow
label-font = 3
label-empty = "It would be best if you could remember that on your own, Colonel."
label-empty-font = 3
label-maxlen = 80

[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6600

format-online = <label-time> <toggle> <label-song>
format-offline = <label-offline>

label-time-font = 3
label-time-foreground = #87875f
label-song = %artist% - %title%
label-song-font = 3
label-offline = mpd is offline
label-offline-font = 3

icon-play = ÓÅò
icon-pause = ÓÅô

[module/bspwm]
type = internal/bspwm

label-focused = %name%
label-focused-padding = 2
label-focused-font = 3
label-focused-underline = #87875f

label-occupied = %name%
label-occupied-padding = 2
label-occupied-font = 3

label-dimmed = %name%
label-dimmed-padding = 2
label-dimmed-underline = #c2c2b0
label-dimmed-font = 3

label-urgent = %name%
label-urgent-padding = 2
label-urgent-underline = #aa4450
label-urgent-font = 3

label-empty = %name%
label-empty-font = 3
label-empty-padding = 2
label-empty-foreground = #87875f

